        <div id="myinfo">
            <div class="infotxt">
                <h2 class="info" id="nicknametxt">닉네임</h2>
                <h2 class="info" id="agetxt">나이</h2>
                <h2 class="info" id="fieldtxt">공부분야</h2>
            </div>

            <div class="infodata">
                <h2 class="myinfo" id="nicknamedata"><%= username %></h2>
                <h2 class="myinfo" id="agedata"><%= list[0].userAge %></h2>
                <h2 class="myinfo" id="fielddata"><%= list[0].category %></h2>
            </div>
        </div>

        <div id="record">
            <div id="record_title">
                <h2 id="record_name"><%= username %></h2><h2>님 공부 기록</h2>
            </div>

            <div id="recordbox">
                <div class="box" id="today_box">
                    <div class="imagebox" id="today_image">	<img src="/images/today_image.png" alt="today Image"></div>
                    <h4>Today Record</h4>
                    <hr>
                    <h2>00:00:00</h2>
                </div>

                <div class="box" id="week_box">
                    <div class="imagebox" id="week_image"><img src="/images/week_image.png" alt="week Image"></div>
                    <h4>This Week Record</h4>
                    <hr>
                    <h2>00:00:00</h2>
                </div>

                <div class="box" id="month_box">
                    <div class="imagebox" id="month_image"><img src="/images/month_image.png" alt="month Image"></div>
                    <h4>This Month Record</h4>
                    <hr>
                    <h2>00:00:00</h2>
                </div>
            </div>
        </div>
